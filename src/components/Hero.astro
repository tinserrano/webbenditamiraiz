---
// import bgImage from '../../img/hero.jpeg'
// Importa el componente Image y la imagen
import { Image } from "astro:assets";
import myImage from "../img/hero.jpeg";
import Button from "../components/ui/Button.astro";
const { class: className } = Astro.props;
---

<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<section
    data-testid="hero"
    class="flex flex-col-reverse items-center justify-center text-center space-y-8 space-y-reverse sm:space-y-0 sm:flex-row sm:items-center sm:justify-center lg:flex-row"
>
    <div class="p-5 lg:px-20 sm:text-left text-center">
        <h1 class="text-6xl sm:text-7xl md:text-8xl font-bold mb-2">HOLA!</h1>
        
        <h2
            class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-monospace mb-10 text-black dark:text-white"
        >
            ¡Hola! Mi nombre es Milca, y seré tu próxima Guía Ayurvedica
        </h2>

    </div>
    
    <div class="lg:p-8 md:p-4 sm:p-2">
        <div
            class="w-48 h-48 sm:w-64 sm:h-64 md:w-96 md:h-96 lg:w-[30rem] lg:h-[30rem] xl:w-[40rem] xl:h-[40rem] mx-auto"
        >
            <Image
            

                <Image src={myImage} class="object-cover rounded-full" alt="Imagen con recorte ovalado asimétrico" style="clip-path: ellipse(42% 43% at 50% 49%);"></Image>

        </div>
    </div>
</section>
